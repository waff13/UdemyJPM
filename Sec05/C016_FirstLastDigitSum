public class FirstLastDigitSum {

    public static int sumFirstAndLastDigit (int number) {
        if (number < 0) {
            return -1;
        }
        int last = number % 10;
        if ((number / 10) < 1) {
            last += last;
            return last;
        }
        while (number > 10) {
            number = number / 10;
        }
        return number + last;
    }
}
